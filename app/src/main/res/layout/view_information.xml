<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_xsmall"
    app:cardElevation="@dimen/spacing_xsmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/global_spacing_xxs"
            android:text="@string/restaurant_detail_info"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/global_spacing_xxs"
            android:paddingTop="@dimen/global_spacing_xxs">

            <TextView
                android:id="@+id/restaurant_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_xsmall"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:paddingLeft="@dimen/spacing_xsmall"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/material_grey_800"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/restaurant_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_xsmall"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:paddingLeft="@dimen/spacing_xsmall"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/material_grey_800"
                android:textSize="16dp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/restaurant_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_xsmall"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:paddingLeft="@dimen/spacing_xsmall"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/material_grey_800"
                android:textSize="16dp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
